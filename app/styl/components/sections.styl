@import "nib"
@import "vars"
@import "mixins"

.wrapper
  margin auto
  padding-right 15px
  padding-left 15px
  max-width: 1200px
  @media (max-width: max-medium)
    max-width 100%

.product-page
  &__header
    display: flex;
    justify-content: space-between;
    margin-bottom: 32px;
    @media (max-width: max-medium)
      display: block;
  &__name
    font-weight: 700;
    font-size: 16px;
    line-height: 22px;
    margin: 0;
    flex-grow 1
    padding-right: 15px;
    @media (max-width: max-medium)
      width: 100%;
      margin-bottom: 10px;
      padding-right: 0
  &__code
    font-weight: 700;
    font-size: 16px;
    line-height: 22px;
    color accent-color
    white-space: nowrap;
  &__main
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    @media (max-width: max-medium)
      display block
  &__images-wrap
    width: 48%;
    @media (max-width: max-extra-large)
      width: 465px;
    @media (max-width: max-large)
      width 314px
    @media (max-width: max-medium)
      width: 100%;
  &__images
    position: sticky;
    top: 20px;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: flex-start;
    @media (max-width: max-medium)
      position: static;
    @media (max-width: max-sm)
      flex-direction: column-reverse;
  &__thumbnails
    position relative
    @media (max-width: max-sm)
      width 100%
    &-arrow
      display: block;
      position: absolute;
      left: 0;
      right: 0;
      z-index: 2;
      height: 28px;
      text-align: center;
      cursor: pointer;
      @media (max-width: max-sm)
        height: auto;
        bottom: 0;
        width: 25px;
        display: flex;
        align-items: center;
        justify-content: center;
      &.--prev
        top: 0;
        transform: rotateX(-180deg);
        background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, #FFFFFF 100%);
        @media (max-width: max-sm)
          right: auto;
          background: linear-gradient(-90deg, rgba(255,255,255,0) 0%, #fff 100%);
          img
            transform: rotateZ(90deg);
      &.--next
        bottom: 0
        height: 33px;
        background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, #FFFFFF 100%);
        @media (max-width: max-sm)
          height auto
          right: 0
          top 0
          left auto
          background: linear-gradient(90deg, rgba(255,255,255,0) 0%, #fff 100%);
          display: flex;
          align-items: center;
          justify-content: center;
          img
            transform: rotateZ(-90deg);
      &.slick-disabled,
      &.slick-hidden
        opacity 0
        visibility hidden
  &__thumbnails-slider
    width: 72px;
    font-size 0
    line-height 0
    z-index: 1;
    opacity 0
    @media (max-width: max-sm)
      width 100%
    &.slick-initialized
      opacity 1
    &-item
      margin-bottom: 7px;
      cursor pointer
      width: 100%
      height: 72px !important
      border: 1px solid #D2D6D9;
      @media (max-width: max-sm)
        width 72px
        height auto !important
        margin-bottom 0
        margin-right 5px
      &.slick-current
        border-color accent-color
      img
        width: 100%;
        height: 100%;
        object-fit: cover;
  &__slider
    width: 83%;
    cursor pointer
    opacity 0
    @media (max-width: max-large)
      width: calc(100% - 85px);
    @media (max-width: max-sm)
      width 100%
      margin-bottom: 15px;
    &.slick-initialized
      opacity 1
    &-item
      border: 1px solid #D2D6D9;
      height: 460px;
      opacity 1 !important
      background-color: #e9e9e9;
      @media (max-width: max-extra-large)
        height: 385px;
      @media (max-width: max-large)
        height: 229px;
      @media (max-width: max-medium)
        height: 466px;
      @media (max-width: max-sm)
        height: 90vw;
    img
        width: 100%;
        height: 100%;
        object-fit: cover;
        @media (max-width: max-large)
          object-fit: contain;
  &__content
    width: 49%;
    padding: 64px 0 84px
    @media (max-width: max-extra-large)
      width: calc(100% - 490px);
      padding: 25px 0 84px;
    @media (max-width: max-large)
      width: calc(100% - 330px);
      padding: 0 0 84px;
    @media (max-width: max-medium)
      width 100%
      padding: 25px 0 84px;
  &__filter
    margin-bottom: 20px;
    border-bottom: 2px solid #ECECEC;
    padding-bottom: 23px;
    &-thumbs
      list-style: none;
      margin: 0;
      padding: 0;
      font-size: 0;
      line-height: 0;
    &-thumb
      display inline-block
      width: 64px;
      height: 64px;
      border: 1px solid #D2D6D9;
      margin-right: 7px;
      cursor pointer
      &.--active
        border-color accent-color
      img
        width: 100%;
        height: 100%;
        object-fit: cover;
  &__row-label
    margin-bottom: 13px;
  &__price
    font-weight: 700;
    font-size: 40px;
    line-height: 34px;
    margin-bottom: 12px;
    @media (max-width: max-large)
      font-size: 31px;
      line-height: 23px;
  &__controls
    display: flex;
    align-items: center;
    margin-bottom: 145px;
    @media (max-width: max-extra-large)
      flex-wrap: wrap;
      margin-bottom: 35px;
  &__add-to-cart
    display: flex;
    align-items: center;
    margin-right: 20px;
    margin-top: 20px;
    @media (max-width: max-sm)
      margin-right: 0
    input[type="number"]
      border: 1px solid #D2D6D9;
      border-radius: 4px 0px 0px 4px;
      text-align: center;
      padding: 10px 10px;
      width: 120px;
      display: block;
      font-size: 20px;
      line-height: 25px;
      @media (max-width: max-medium)
        width: 92px;
    button
      background-color: accent-color;
      border: 1px solid accent-color
      color: white;
      white-space: nowrap;
      border-radius: 0px 4px 4px 0px;
      font-weight: 500;
      font-size: 18px;
      line-height: 21px;
      padding: 12px 27px;
      cursor: pointer;
      transition background-color .3s, color .3s ease-in-out
      @media (max-width: max-medium)
        padding: 12px 25px;
      &:hover
        background-color transparent
        color accent-color
  &__add-print
    display: flex;
    align-items: center;
    font-weight: 500;
    font-size: 18px;
    line-height: 21px;
    color accent-color
    -webkit-appearance: none;
    border: none;
    outline: 0;
    background-color: transparent;
    white-space: nowrap;
    cursor: pointer;
    padding: 0;
    margin-top: 20px;
    img
      margin-right: 8px;
  &__info
    border-radius: 4px;
    border: 1px solid #D2D6D9;
    display: flex;
    flex-wrap: wrap;
    padding: 31px 27px 22px;
    line-height: 22px;
    margin-bottom: 48px;
    @media (max-width: max-large)
      display block
      padding: 15px 15px 10px;
      margin-bottom: 15px;
    &-left
      border-right: 1px solid #D2D6D9;
      width: 50%;
      padding-right: 20px;
      @media (max-width: max-large)
        width: 100%;
        padding-right: 0
        border-right none
    &-right
      width: 50%;
      padding-left: 43px;
      @media (max-width: max-large)
        width: 100%;
        padding-left: 0
    &-sect
      margin-bottom: 33px;
      @media (max-width: max-large)
        margin-bottom: 10px;
      &:last-of-type
        margin-bottom 0
      strong
        margin-bottom: 8px;
        display: block;
      div
        margin-bottom: 8px;
  &__characteristics
    border: 1px solid #D2D6D9;
    box-sizing: border-box;
    border-radius: 4px;
    padding: 31px 30px;
    line-height: 22px;
    @media (max-width: max-large)
      padding: 15px;
    &-header
      margin-bottom: 33px;
      display: block;
    &-row
      display: flex;
      flex-wrap: wrap;
      margin-bottom: 16px;
      &:last-of-type
        margin-bottom: 0
    &-label
      width: 59%;
      position relative
      &:after
        content ''
        border-bottom: 1px dashed #D2D6D9;
        right: 10px;
        left: 0;
        top: 12px;
        position: absolute;
        z-index 1
      span
        background-color: white;
        position: relative;
        z-index: 2;
        padding-right: 10px;
    &-value
      width: 41%;
  &__video
    margin-top: 49px;
    &-label
      font-weight: 600;
      font-size: 23px;
      line-height: 33px;
      margin-bottom: 23px;
    &-frame
      position:relative;
      padding: 0 0 56.25% 0;
      height:0;
      overflow:hidden;
      iframe,
      object,
      embed
        position:absolute;
        top:0;
        left:0;
        width:100%;
        height:100%;
  &__description
    margin-top: 34px;
  &__rating
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    margin-top: 54px;
    &-stars
      font-size: 0;
      line-height: 0;
      margin-right: 15px;
      img
        margin-right: 1px;
    &-label
      position: relative;
      padding-right: 26px;
      &:after
        content ''
        position: absolute;
        top: 6px;
        bottom: 6px;
        width: 2px;
        background-color: #a1a2a2
        right: 12px;
    &-add-review
      font-weight: 500;
